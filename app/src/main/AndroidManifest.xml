<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sdchang.permissionpolice">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".external.ExternalActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ConfirmRequestActivity"
            android:theme="@style/Theme.AppCompat.Transparent"/>

        <service android:name=".VerificationService">
            <intent-filter>
                <action android:name="com.sdchang.permissionpolice.permissionRequest"/>
            </intent-filter>
        </service>

        <service android:name=".ContactsListService"/>

    </application>
</manifest>
