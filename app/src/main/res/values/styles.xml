<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary3</item>
        <item name="colorPrimaryDark">@color/colorPrimary4</item>
        <item name="colorAccent">@color/colorPrimary2</item>
    </style>

    <style name="Theme.AppCompat.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Nanny.Dialog.NoActionBar" parent="Theme.AppCompat.Dialog.Alert">
        <!--Disable action bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--Lift dialog title's max lines limit-->
        <item name="android:windowTitleStyle">@style/Nanny.DialogWindowTitle.NoMaxLines</item>
    </style>

    <style name="Nanny.Light.Dialog.NoActionBar" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--Disable action bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--Lift dialog title's max lines limit-->
        <item name="android:windowTitleStyle">@style/Nanny.DialogWindowTitle.NoMaxLines</item>
    </style>

    <!--Base.V7.Theme.AppCompat.Dialog sets windowTitleStyle to this style's parent with maxLines=1-->
    <style name="Nanny.DialogWindowTitle.NoMaxLines" parent="RtlOverlay.DialogWindowTitle.AppCompat">
        <item name="android:maxLines">99999</item>
    </style>
</resources>
